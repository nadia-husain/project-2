<link href="/public/assets/forms.css" rel="stylesheet">

<form method="POST" action="/auth/signup" class="signup">
    <h1 style="text-align: center; font-size: 25px;">Sign Up</h1>
    <div class="form-group">
        <label style="float: left;">Name</label>
        <input name="name" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label style="float: left;">Email Address</label>
        <input name="emailAddress" type="email" class="form-control"/>
    </div>

    <div class="form-group">
        <label style="float: left;">Password</label>
        <input name="password" type="password" class="form-control"/>
    </div>


    <br>
    <div>
        <button type="submit" class="btn btn-primary" style="margin-left: 50px; border-radius: 30px; width: 100px;">Sign Up</button>
    </div>
</form>