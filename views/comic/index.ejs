<h1 style="text-align: center;"> My Comics</h1>
<table class="tableStriped">
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Date Published</th>
        <th>No Episodes</th>
        <th>Description</th>
        <th>Status</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>


<% comics.forEach(function(comic){ %> 

    <tr>
        <td> <img src="/public/uploads/<%= comic.image %>" width="250" height="220px"></td>
        <td><%= comic.title%></td>
        <td><%= comic.genre %></td>
        <td><%= comic.datePublished %></td>
        <td><%= comic.noEpisodes %></td>
        <td><%= comic.description %></td>
        <td><%= comic.completed %></td>
        <td><a href="edit?id=<%= comic._id %>"><button class="btn btn-primary" style="background-color: #480CA8;">Edit</button></a></td>
        <td><a href="/comic/delete?id=<%= comic._id %>"><button class="btn btn-primary" style="background-color:#480CA8;">Delete</button></a></td>
    </tr>
<% }) %>

</table>
