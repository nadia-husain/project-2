<!-- <h1></%= myUserId %></h1> -->

<!-- <form action="/comic/detail" method="post"> -->
<form action="/comic/detail?id=<%= comic._id %>" method="post">
    <textarea name="review"></textarea>
    <button type="submit">Add A Review</button>
    <input type="hidden" value="<%=comic._id%>" name="comic">
    <input type="hidden" value="<%= myUserId %>" name="user">
</form>

